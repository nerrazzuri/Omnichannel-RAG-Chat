# Environment configuration template for Omnichannel Chatbot Backend
# Copy this file to .env and fill in your actual values
# WARNING: Never commit the actual .env file to version control

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/chatbot_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# JWT Configuration (generate a secure random string for production)
JWT_SECRET=generate-a-secure-random-string-minimum-32-characters
JWT_EXPIRES_MINUTES=60

# Logging
LOG_LEVEL=INFO
DEBUG=false

# Document Storage Path
DOCUMENT_STORAGE_PATH=/path/to/storage

# WhatsApp Configuration (optional)
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_ACCESS_TOKEN=

# Microsoft Teams Configuration (optional)
TEAMS_APP_ID=
TEAMS_APP_SECRET=

# Telegram Configuration (optional)
TELEGRAM_BOT_TOKEN=

# WeChat Configuration (optional)
WECHAT_APP_ID=
WECHAT_APP_SECRET=

# LINE Configuration (optional)
LINE_CHANNEL_ACCESS_TOKEN=
LINE_CHANNEL_SECRET=

# Monitoring (optional)
SENTRY_DSN=